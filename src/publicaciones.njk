{% block content %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h1>
                    Publicaciones
                </h1>
            </div>
        </div>
    </div>
    <div class="bg-white w-100 py-5">
        <div class="container">
            <div class="row">
                <div class="col-12" id="rss-container">
                    <div id="retainable-rss-embed"
                        data-rss="https://medium.com/feed/redciudadana/tagged/datos-abiertos"
                        data-maxcols="4"
